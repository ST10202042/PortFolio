@{
    ViewData["Title"] = "Manager Dashboard";
}

<style>
    body {
        background-color: black;
        color: gold;
    }

    .btn-primary {
        background-color: gold;
        color: black;
        border: 1px solid gold;
    }

        .btn-primary:hover {
            background-color: #e6b800;
        }

    .container {
        margin-top: 50px;
    }

    h2, p {
        color: gold;
    }

    .btn {
        background-color: black;
        color: gold;
        border: 1px solid gold;
        font-weight: bold;
        padding: 10px 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn:hover {
            background-color: #333;
            color: gold;
        }

    ul {
        list-style-type: none;
    }

    li {
        margin-bottom: 15px;
    }
</style>

<div class="container py-5">
    <h2>Welcome,  Manager</h2>
    <p>Select an action below:</p>
    <ul>
        <li>
            <!-- The link will now open the 'Manage' action in 'Manager' controller -->
            <a href="@Url.Action("Manage", "Manager")" class="btn btn-primary">Manage Claims</a>
        </li>
    </ul>
</div>
