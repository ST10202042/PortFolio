@model IEnumerable<PortFolio.Models.Claim>

@{
    ViewData["Title"] = "Manage Claims";
}

<div class="container py-5">
    <h2 class="mb-4">Manage Claims</h2>
    <table class="table table-dark table-bordered">
        <thead>
            <tr>
                <th>Claim Number</th>
                <th>Lecturer</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimNumber</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Status</td>
                    <td>
                        <!-- Approve Button -->
                        <form method="post" asp-action="Approve" asp-route-id="@claim.Id" style="display:inline;">
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>

                        <!-- Decline Button -->
                        <form method="post" asp-action="Decline" asp-route-id="@claim.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Decline</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
