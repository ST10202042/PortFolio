@{
    var userRole = TempData["UserRole"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Redirect</title>
</head>
<body>
    <script>
        // Store the user role in localStorage
        localStorage.setItem('userRole', '@userRole');

        // Redirect the user based on the role
        const userRole = localStorage.getItem('userRole');
        if (userRole === 'Lecturer') {
            window.location.href = '/Lecturer/Dashboard';  // Lecturer dashboard
        } else if (userRole === 'Manager') {
            window.location.href = '/Manager/Dashboard';  // Manager dashboard
        } else if (userRole === 'HRManager') {
            window.location.href = '/HRManager/Dashboard';  // HR Manager dashboard
        } else {
            window.location.href = '/Home/Dashboard';  // Default redirect
        }
    </script>
</body>
</html>
