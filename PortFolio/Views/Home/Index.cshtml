@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Styling -->
    <style>
        body {
            background-color: #000; /* Black background */
            color: #FFD700; /* Gold text */
        }

        header {
            background: #000;
            color: #FFD700;
        }

        .hero-section {
            background: #000; /* Black background for hero section */
            padding: 60px 0;
        }

        .hero-text h2, .hero-text p {
            color: #FFD700; /* Gold text in hero section */
        }

        .button-container {
            margin-top: 20px;
        }

        .btn {
            margin: 0 10px;
            color: #FFD700; /* Gold text on buttons */
            background-color: #333; /* Dark button background */
        }

            .btn:hover {
                color: #FFA500; /* Lighter gold on hover */
                background-color: #444;
            }

        .footer {
            background: #222; /* Darker footer background */
            padding: 20px 0;
            text-align: center;
            color: #FFD700; /* Gold footer text */
        }
    </style>
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container">
            <h1 class="mb-0">Contract Monthly Claim System</h1>
        </div>
    </header>

    <section class="hero-section">
        <div class="container">
            <div class="hero-text text-center">
                <h2>Welcome to Contract Monthly Claim System</h2>
                <p>Your easy solution for managing and submitting monthly claims.</p>
                <a href="#features" class="btn btn-primary btn-lg">Learn More</a>
            </div>
        </div>
    </section>

    <section id="user-roles" class="text-center py-5">
        <div class="container">
            <h2 class="display-4">Welcome</h2>
            <p>This system allows lecturers to make claims, managers to approve claims, and HR managers to create invoices.</p>

            <!-- Button Section -->
            <div class="btn-container">
                <a href="/Account/Register" class="btn btn-primary">Register as Lecturer</a>
                <a href="/Account/Register" class="btn btn-primary">Register as Manager</a>
                <a href="/Account/Register" class="btn btn-primary">Register as HR Manager</a>
            </div>
        </div>
    </section>

    <section id="features" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Features</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="feature-icon">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <h4>Easy Claim Submission</h4>
                        <p>Submit your monthly claims quickly and efficiently with our user-friendly interface.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="feature-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h4>Track Your Claims</h4>
                        <p>Keep track of your claim status and history with real-time updates and notifications.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="feature-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <h4>Upload Supporting Documents</h4>
                        <p>Attach and manage all necessary supporting documents directly within the system.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year Contract Monthly Claim System. All Rights Reserved.</p>
    </footer>

    <!-- Script for Redirecting to Register Page -->
    <script>
        function redirectTo() {
            window.location.href = '/Register'; // Redirect to Register page
        }
    </script>

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
